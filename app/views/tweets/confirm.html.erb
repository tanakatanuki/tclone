<%= render "nav" %>

<div class="container">
    <div class="col-md-6">
        <h3>以下の内容で登録しますか</h3>
        
        <table class="table">    
            <tr>
                <th>本文</th>
            </tr>
            <tr>
                <td><%= @tweet.content %></td>
            </tr>
        </table>
        
        <%= form_with(model: @tweet, local: true, url: tweets_path) do |form| %>
        <table class="table">
            <%= form.hidden_field :content %>
            <%= form.submit "投稿する", class:"btn btn-active" %>
        </table>
        <% end %>
        
        <%= form_with(model: @tweet, local: true, url: new_tweet_path, method: "get") do |form| %>
        <table class="table">
            <%= form.hidden_field :content %>
            <%= form.submit "書き直す", class:"btn btn-active", name: "back" %>
        </table>
        <% end %>
    </div>
</div>



<%= render "footer" %>
