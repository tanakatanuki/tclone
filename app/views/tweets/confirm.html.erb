<h3>以下の内容で登録しますか</h3>

<%= form_with(model: @tweet, local: true, url: tweets_path) do |form| %>
    <%= form.hidden_field :content %>

    <p>本文...<%= @tweet.content %></p>
    <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model: @tweet, local: true, url: new_tweet_path, method: "get") do |form| %>
    <%= form.hidden_field :content %>
    <%= form.submit "書き直す", name: "back" %>
<% end %>