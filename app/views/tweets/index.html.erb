<%= render "nav" %>

<div class="container">
  <h2>つぶやき一覧</h2>
  
  <table class="table table-striped">
    <% @tweets.each do |tweet| %>
      <tr>
        <td colspan="1" ><%= tweet.content %></td>
      </tr>
      <tr class="active">
        <td>
            <%= link_to "編集", edit_tweet_path(tweet.id), class: "btn btn-info" %>
            <%= link_to "削除", tweet_path(tweet.id),
                              class: "btn btn-warning",
                              method: :delete,
                              data: {confirm: "本当に削除してもいいですか"} %>
          </td>
      </tr>
    <% end %>
  </table>
</div>

